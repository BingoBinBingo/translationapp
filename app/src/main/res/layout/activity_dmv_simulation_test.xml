<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/simulation_test_root_view"
    tools:context=".activities.DMVSimulationTestActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_dmv_simulation_test" />



        <LinearLayout
            android:id="@+id/control_panal"
            android:background="@color/colorPrimary"
            android:layout_gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/control_bar_margin">

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                    <Button
                        android:padding="3dp"
                        android:textColor="@color/white"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preveous_button"
                        android:textAllCaps="true"
                        android:id="@+id/previous_question"/>

                    <Button
                        android:textColor="@color/white"
                        android:padding="3dp"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/previous_question"
                        android:text="@string/next_button"
                        android:textAllCaps="true"
                        android:id="@+id/next_question"/>
            </LinearLayout>

         </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/select_question_dialog_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_search_white_48dp" />


</android.support.design.widget.CoordinatorLayout>
